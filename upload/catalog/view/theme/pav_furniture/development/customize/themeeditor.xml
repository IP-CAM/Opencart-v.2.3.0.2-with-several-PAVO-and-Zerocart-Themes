<?xml version="1.0" encoding="UTF-8" ?>

<themeeditor>
	<version value="1.4">
	<ccc available="true" />
	<guest_checkout available="true" />
	<one_page_checkout available="true" />
	<store_locator available="true" />
	</version>
	<author>leotheme</author>
<name>Live Theme Editor</name>	
<selectors>
	<items>
			<header>Body Content</header>
			<match>body</match>
			
			<item>
				<type>text</type>
				<label>Background Color</label>
				<selector>body</selector>
				<attrs>background-color</attrs>
			</item>

			<item>
			<type>image</type>
				<label>Background Image</label>
				<selector>body</selector>
				<attrs>background-image</attrs>
	     </item>

			<item>
				<type>text</type>
				<label>Background Content</label>
				<selector>body #page</selector>
				<attrs>background-color</attrs>
			</item> 
			
			<item>
				<type>image</type>
				<label>Background Image</label>
				<selector>body #page</selector>
				<attrs>background-image</attrs>
			</item> 

	 	<item>
			<type>fontsize</type>
			<label>Font-Size</label>
			<selector>body #page</selector>
			<attrs>font-size</attrs>
		</item> 


		<item>
			<type>text</type>
			<label>Color Text</label>
			<selector>body #page</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Link Color</label>
			<selector>body #page a</selector>
			<attrs>color</attrs>
		</item> 

	</items>
 
	<items>
		<header>TopBar</header>
		<match>topbar</match>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#topbar li a,#topbar .login</selector>
			<attrs>background-color</attrs>
		</item>

	 	<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>#topbar a</selector>
			<attrs>color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Bg Search</label>
			<selector> #search input </selector>
			<attrs>background-color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Color Search</label>
			<selector> #search input </selector>
			<attrs>color</attrs>
		</item> 	

	</items>
	<items>
		<header>Header</header>
		<match>header-main</match>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#header</selector>
			<attrs>background-color</attrs>
		</item> 

		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>#header</selector>
			<attrs>background-image</attrs>
		</item>		

		<item>
			<type>text</type>
			<label>Text Color</label>
			<selector>#header .login</selector>
			<attrs>color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Bg Shopping Cart</label>
			<selector>#header #cart .heading</selector>
			<attrs>background-color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Icon Shopping Cart</label>
			<selector>#header #cart .heading a span.iconcart</selector>
			<attrs>color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Color Shopping Cart</label>
			<selector>#header #cart #cart-total</selector>
			<attrs>color</attrs>
		</item> 

	</items>
	<items>
		<header>Main Menu</header>
		<match>pav-mainnav</match>
        <item>
            <type>text</type>
            <label>Background Color</label>
            <selector> #header-main .container</selector>
            <attrs>background-color</attrs>
        </item>
	 	<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>.navbar-inverse .navbar-nav li a</selector>
			<attrs>color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Submenu Link Color </label>
			<selector>.navbar-inverse .navbar-nav .dropdown-menu li a</selector>
			<attrs>color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Color Text</label>
			<selector>.pav-megamenu .dropdown-menu, .pav-megamenu .dropdown-menu p, .pav-megamenu .dropdown-menu h3</selector>
			<attrs>color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Border Color</label>
			<selector>.pav-megamenu .dropdown-menu</selector>
			<attrs>border-top-color</attrs>
		</item> 

	</items>
	 
	<items>
		<header>Footer Top</header>
		<match>footer-top</match>
			<item>
				<type>text</type>
				<label>Background Color</label>
				<selector>.pav-carousel</selector>
				<attrs>background-color</attrs>
			</item> 

			<item>
				<type>image</type>
				<label>Background Image</label>
				<selector>.pav-carousel</selector>
				<attrs>background-image</attrs>
			</item>

			<item>
				<type>text</type>
				<label>Text Color</label>
				<selector>.pav-carousel, .pav-carousel .box-heading</selector>
				<attrs>color</attrs>
			</item>

			<item>
				<type>text</type>
				<label>Link Color</label>
				<selector>.pav-carousel a</selector>
				<attrs>color</attrs>
			</item>

	</items>
	<items>
		<header>Footer Center</header>
		<match>footer-center</match>
			<item>
				<type>text</type>
				<label>Background Color</label>
				<selector>#footer .footer-center .footer-center-wrap</selector>
				<attrs>background-color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Color Text</label>
				<selector>.footer-center, #footer .box .box-heading</selector>
				<attrs>color</attrs>
			</item> 

			<item>
				<type>text</type>
				<label>Color Link</label>
				<selector>#footer .column a</selector>
				<attrs>color</attrs>
			</item>
            <item>
				<type>text</type>
				<label>Color Box-Headding</label>
				<selector>#footer .box .box-heading</selector>
				<attrs>color</attrs>
			</item>

			<item>
				<type>text</type>
				<label>Bg Input</label>
				<selector>#footer .inputbox</selector>
				<attrs>background-color</attrs>
			</item>
	
			<item>
				<type>text</type>
				<label>Color Input</label>
				<selector>#footer .inputbox</selector>
				<attrs>color</attrs>
			</item>

			<item>
				<type>text</type>
				<label>Bg Button</label>
				<selector>#footer .newsletter .btn-newletter</selector>
				<attrs>background-color</attrs>
			</item>

			<item>
				<type>text</type>
				<label>Button Color</label>
				<selector>#footer .newsletter .btn-newletter</selector>
				<attrs>color</attrs>
			</item>

			<item>
				<type>text</type>
				<label>Bg Icon</label>
				<selector>#footer .social ul li</selector>
				<attrs>background-color</attrs>
			</item>

			<item>
				<type>text</type>
				<label>Icon Color</label>
				<selector>#footer .social ul li a i</selector>
				<attrs>color</attrs>
			</item>	
			
			
			<item>
				<type>image</type>
				<label>Background Image</label>
				<selector>#footer .footer-center .footer-center-wrap</selector>
				<attrs>background-image</attrs>
			</item>
	</items>
	<items>
		<header>Powered</header>
		<match>powered</match>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#powered .wrap-powered</selector>
			<attrs>background-color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Text</label>
			<selector>#powered</selector>
			<attrs>color</attrs>
		</item> 

	 	<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>#powered a</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>#powered .wrap-powered</selector>
			<attrs>background-image</attrs>
		</item> 

	</items>
</selectors>

<elements>
	<items>
		<header>Products</header>
		<match>product</match>
		<item>
			<type>text</type>
			<label>Color Price</label>
			<selector>.price</selector>
			<attrs>color</attrs>
		</item>
 		<item>
			<type>text</type>
			<label>Color Price Old</label>
			<selector>.price .price-old</selector>
			<attrs>color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Color Price Tax</label>
			<selector>.product-info .price-tax</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>BgColor Cart</label>
			<selector>.cart input.button</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Color Cart</label>
			<selector>.cart input</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>BgColor Wishlist</label>
			<selector>.wishlist a</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>BgColor Compare</label>
			<selector>.compare a</selector>
			<attrs>background-color</attrs>
		</item>	

		<item>
			<type>text</type>
			<label>Bg Sale Label</label>
			<selector>.product-block .image .product-label-special</selector>
			<attrs>background-color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Color Sale Label</label>
			<selector>.product-block .image .product-label-special</selector>
			<attrs>color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Color Product Name</label>
			<selector>.product-block .name, .product-block .name a</selector>
			<attrs>color</attrs>
		</item>

	</items>
		<items>
		<header>Modules in Sidebar</header>
		<match>modules</match>
			<item>
				<type>text</type>
				<label>Heading Background</label>
				<selector>.sidebar .box .box-heading</selector>
				<attrs>background-color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Heading Color</label>
				<selector>.sidebar .box .box-heading span</selector>
				<attrs>color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Content Background</label>
				<selector>.box-category, .box-category ul, .sidebar .box .box-content, .sidebar .box-content .box-product</selector>
				<attrs>background-color</attrs>
			</item>
			
			<item>
				<type>text</type>
				<label>Border Color</label>
				<selector>.sidebar .product-block</selector>
				<attrs>border-bottom-color</attrs>
			</item>

			
	</items>
</elements>
</themeeditor>
